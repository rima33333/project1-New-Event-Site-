<%-include('../partials/header')-%>
<%-include('../partials/navbar')-%>

<div class="container text-black">
     <div class="row mt-4">
        <div class="col-md-9 offset-md-1">
            <div class="card-body">
                <div class="event-image-container">
                <% if (event.photo) { %>
                    <img src="/uploads/<%= event.photo %>" alt="Event Photo" class="event-img">
                <% } else { %>
                    <img src="/path/to/default/image.jpg" alt="Default Event Photo" class="event-img">
                <% } %>
                </div>
                <h5 class="card-title"><%= event.title%></h5>
                <hr>
                <p class="card-text"> <%= event.description%></p>
                <p class="card-text"> <%= event.location%></p>
            
                <p class="card-text"> <%= event.date.toDateString()%></p>
                <hr>
                <% if ((user ) && (user.id == event.user_id)) { %>
                <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">Edit</a>
                
                 <button class="btn btn-danger" onclick="deleteEvent()" id="deleteBtn" data-id="<%= event.id%>" >Delete</button>
                 <%}%>
              </div>
             
        </div>
     </div>
</div>

<%-include('../partials/footer')-%>

<style>
.event-img {
    max-width: 300px; /* Change this value based on your preferred width */
    height: auto;     /* Keeps the aspect ratio of the image */
    display: block;
    margin-left: auto;
    margin-right: auto;
}

.event-image-container {
    text-align: center;  /* Centers the image inside its container */
    margin-bottom: 20px;
}
</style>
