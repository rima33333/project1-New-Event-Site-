<%-include('../partials/header')-%>
<%-include('../partials/navbar')-%>
 
    

 

 

 
    <div class="container text-black mt-3 ">
        <div class="row mt-3">
            <div class="col md-12"></div>

            <%-include('../partials/flashMessages')-%>
        </div>
<br>
<br>
<br>

        <% chunk.forEach((events) => { %>
            <div class="row mt-4">
                <% events.forEach((event) => { %> 
                    <div class="col-sm-6 col-md-4">
                        <div class="card ">
                          <% if (event.photo) { %>
                            <img src="/uploads/<%= event.photo %>" alt="Event Photo" class="card-img-top">
                          <% } else { %>
                            <img src="/path/to/default/image.jpg" alt="Default Event Photo" class="card-img-top">
                          <% } %>
                          

                            <div class="card-body">
                                <h5 class="card-title"><%= event.title %></h5>
                                <p class="card-text"> <%= event.description %></p>
                                <p class="card-text"> <%= event.location %></p>
                                <p class="card-text"> <%= event.date %></p>
                                <a href="<%= '/events/event/' + event.id %> " class="btn btn-primary">show more</a>

                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% }) %>
        <div class="row">
            <div class="col-12 mt-2 mb-4 text-white pagination">
                <nav aria-label="...">
                    <ul class="pagination pagination-lg ">
                        <% for ( let i=1;i<= Math.ceil(total/5); i++) {%>
                            <% if ( pageNo == i) {%>
                                <li class="page-item active "><a class="page-link" href="<%= '/events/' + i%>"><%= i %></a></li>
                                <%} else {%>
                                <li class="page-item"><a class="page-link" href="<%= '/events/' + i%>"><%= i %></a></li>
                                <%}   %>
                   <%}%>
                    </ul>
                  </nav>
            </div>
        </div>
    </div>
</div>
<%-include('../partials/footer')-%>
